<div class="row">
  <div class="container">
    <div class="col-md-10">
    </div>
    <%= link_to 'Adicionar Item', { controller: 'item', action: 'novo', id: params[:id]}, class: 'btn btn-primary btn-default'%>
  </div>
</div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Itens da Categoria</h3>
    </div>
    <div class="panel-body">
      <ul class="media-list">

        <div class="row">
          <% @itens.each do |i| %>
          <div class="col-md-2"></div>
          <div class="col-md-4">
            <div class="thumbnail">
              <img class="center-block" src="img/pd.png" alt="..." width="200" height="200">
              <div class="caption">
                <h3><%= i.nome %></h3>
                <p><%= i.descricao %></p>

                <a href="editar.html" class="btn btn-default " role="button">
                  Editar
                </a>
                <%= link_to 'Deletar', { controller: 'item', action: 'deleta', id: i.id_item, id_categoria: i.id_categoria}, {class: 'btn btn-danger btn-default'} %>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </ul>
    </div>




  <br/>
