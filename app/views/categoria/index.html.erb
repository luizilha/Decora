
<div class="row">
  <div class="container">
    <div class="col-md-10">
    </div>
    <%= link_to 'Adicionar Categoria', { controller: 'categoria', action: 'novo'}, class: 'btn btn-primary btn-default'%>
  </div>
</div>

<div class="row">

  <div class="panel panel-default" style="margin-top: 20px">
    <div class="panel-heading">
      <h3 class="panel-title">Categorias</h3>
    </div>
    <div class="panel-body">
      <ul class="media-list">

        <% @categorias.each do |c| %>
        <li class="media">
          <div class="media-left">
            <%= image_tag c.capa.url(:thumb) %>
          </div>
          <div class="media-body">
            <div class="col-md-6">
              <h4 class="media-heading">Nome</h4>
              <%= c.nome %>
              <h4 class="media-heading">Descrição</h4>
              <%= c.descricao %>
            </div>
            <%= c.id_categoria %>
            <div class="btn-group" role="group" aria-label="...">
              <%= link_to 'Deletar', { controller: 'categoria', action: 'deleta', id: c.id_categoria}, {class: 'btn btn-danger btn-default'} %>
            </div>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
