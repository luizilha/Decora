
<div class="row">
  <div class="col-md-9">
    <h1 class="text-center"><small>De</small> Coraz√≥n</h1>
  </div>
  <div class="col-md-3">

    <h4>Novo por aqui?</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        Email<br />
        <%= f.email_field :email, autofocus: true, class:'form-control' %>
      </div>

      <div class="field">
        Senha
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters no minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-control'%>
      </div>

      <div class="field">
        Confirmar Senha<br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Registrar", class:'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
